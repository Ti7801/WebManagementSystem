@model WebManagementSystem.ViewModels.UsuarioViewModel

<h3>
    Cadastro de Usuário
</h3>

<form asp-action="CadastrarUsuario" asp-antiforgery="true" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Informe o nome" />
    </div>

    <div class="form-group">
        <label asp-for="Nascimento"></label>
        <input asp-for="Nascimento" type="date" class="form-control" placeholder="Informe o Nascimento" />
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" placeholder="Informe o Telefone" />
    </div>

    <div class="form-group">
        <label asp-for="Celular"></label>
        <input asp-for="Celular" class="form-control" placeholder="Informe o Celular" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Informe o Email" />
    </div>

    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" placeholder="Informe o Endereco" />
    </div>

    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" placeholder="Adicione a  Senha" />
    </div>

    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" class="form-control" type="file" />
    </div>

    </br>

    <div class="form-check">
        <input asp-for="EhGestor" class="form-check-input" type="checkbox" id="ehGestorCheckbox" />
        <label asp-for="EhGestor" class="form-check-label" for="ehGestorCheckbox">
            É Gestor?
        </label>
    </div>

    </br>

    <div>
        <input type="submit" value="Cadastrar" class="btn btn-primary"/>
    </div>
</form>